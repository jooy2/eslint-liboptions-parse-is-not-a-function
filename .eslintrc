{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "import/no-dynamic-require": 0,
    "no-await-in-loop": 0,
    "import/extensions": 0
  }
}
